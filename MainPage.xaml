                    </Border>

                    <TextBlock TextAlignment="Right" Margin="-10,-15,15,-15" Foreground="#66FFFFFF"> 
                        <Run Text="Worth 1000 points" />
                    </TextBlock>

                    <TextBlock TextAlignment="Left" Margin="15,-15,15,-15" Foreground="#66FFFFFF"> 
                        <Run x:Name="currentScoreQ3"  Text=" 0" />
